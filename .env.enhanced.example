# Twitch Configuration
TWITCH_USERNAME=your_bot_username
TWITCH_PASSWORD=oauth:your_oauth_token
TWITCH_CHANNELS=["#your_channel"]

# Enhanced Backend Configuration
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://twitch_cv_user:twitch_cv_pass@localhost:5432/twitch_cv

# Performance Tuning
RATE_LIMIT_MS=1000
MAX_ACTIVE_VARIABLES=100
MAX_COOLDOWN_ENTRIES=500

# Monitoring (optional)
ENABLE_METRICS=true
METRICS_PORT=9090

# Development
DEBUG_MODE=false
NODE_ENV=production